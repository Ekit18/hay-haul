{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["airbnb", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier", "require-explicit-generics"],
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "react/require-default-props": "off",
    "indent": "off",
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".ts", ".tsx"]
      }
    ],
    "no-shadow": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "destructuredArrayIgnorePattern": "^_"
      }
    ],
    "no-unused-vars": "off",
    "import/prefer-default-export": "off",
    "react/prop-types": "off",
    "react/function-component-definition": [
      2,
      {
        "unnamedComponents": "arrow-function"
      }
    ],
    "consistent-return": "off",
    "import/no-cycle": "off",
    "no-underscore-dangle": "off",
    "no-param-reassign": "off",
    "import/order": "off",
    "react/jsx-no-useless-fragment": "off",
    "react/jsx-props-no-spreading": "off",
    "require-explicit-generics/require-explicit-generics": ["error", ["useState ", "React.useState"]]
  }
}
